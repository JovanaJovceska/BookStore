@model BookStore.Models.Genre

@{
    ViewData["Title"] = "Edit";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Update Genre</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit" asp-controller="Genres">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="GenreName" class="control-label"></label>
                        <input asp-for="GenreName" class="form-control" />
                        <span asp-validation-for="GenreName" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-outline-success float-end" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
