@model BookStore.Models.Genre

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details for @Model.GenreName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

                <div class="form-group">
                    <label asp-for="GenreName" class="control-label"></label>
                    <input asp-for="GenreName" class="form-control" readonly />
                    <span asp-validation-for="GenreName" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>
